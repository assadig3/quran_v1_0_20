<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floatingOptionsBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="260dp"
    android:minHeight="120dp"
    android:padding="18dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:elevation="14dp"
    android:background="@drawable/bg_floating_ayah_options">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:maxHeight="100dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="none"
        android:overScrollMode="never">

        <TextView
            android:id="@+id/ayahPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:textSize="18sp"
            android:textColor="#1a237e"
            android:lineSpacingExtra="5dp"
            android:gravity="center"
            android:background="@drawable/bg_ayah_text"
            android:text="نص الآية هنا" />
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- إغلاق -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp">
            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:scaleType="center"
                android:background="@drawable/bg_circle_option_btn"
                android:src="@drawable/ic_close"
                android:tint="#e53935"
                android:contentDescription="إغلاق" />
        </FrameLayout>

        <!-- نسخ -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp">
            <ImageButton
                android:id="@+id/btnCopyAyah"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:scaleType="center"
                android:background="@drawable/bg_circle_option_btn"
                android:src="@drawable/ic_copy"
                android:tint="#7c4dff"
                android:contentDescription="نسخ" />
        </FrameLayout>

        <!-- مشاركة -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp">
            <ImageButton
                android:id="@+id/btnShareAyah"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:scaleType="center"
                android:background="@drawable/bg_circle_option_btn"
                android:src="@drawable/ic_share"
                android:tint="#fa9a14"
                android:contentDescription="مشاركة" />
        </FrameLayout>

        <!-- تفسير -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp">
            <ImageButton
                android:id="@+id/btnTafsir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:scaleType="center"
                android:background="@drawable/bg_circle_option_btn"
                android:src="@drawable/ic_book"
                android:tint="#22b573"
                android:contentDescription="تفسير" />
        </FrameLayout>

        <!-- تلاوة -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageButton
                android:id="@+id/btnPlayAyah"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:scaleType="center"
                android:background="@drawable/bg_circle_option_btn"
                android:src="@drawable/ic_play"
                android:tint="#317aff"
                android:contentDescription="تلاوة" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
